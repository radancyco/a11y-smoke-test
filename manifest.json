---
layout: null
---
{
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "img/icon-16.png",
      "32": "img/icon-32.png"
    },
    "default_popup": "index.html",
    "default_title": "{{ site.name }}"
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://radancy.dev; object-src 'self'",
  "description": "{{ site.description }}",
  "manifest_version": 2,
  "name": "{{ site.title }}",
  "permissions": [
    "activeTab"
  ],
  "version": "{{ site.version }}"
}
